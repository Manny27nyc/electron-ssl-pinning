#!/usr/bin/env node

const fetchSslPinningConfig = require('../lib/fetchSslPinningConfig');

const promises = process.argv
  .slice(2)
  .map((arg) => {
    if (arg.match(/^https?:/)) {
      return arg;
    }

    return `https://${arg}`;
  })
  .map((arg) => new URL(arg))
  .map((url) => fetchSslPinningConfig(url));

Promise.all(promises)
  .then((config) => console.log(JSON.stringify(config, null, 2)))
  .catch((error) => {
    console.error(error);
    process.exit(1);
  });
